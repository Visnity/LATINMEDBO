---
interface Props {
  title: string;
  image: string;
  description: string;
  link: string;
}

const { title, image, description, link } = Astro.props;
---

<a href={link} class="block group">
  <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 group-hover:-translate-y-1">
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover"
    />
    <div class="p-6">
      <h3 class="text-xl font-semibold mb-2 text-primary">{title}</h3>
      <p class="text-gray-600 mb-4">{description}</p>
      <span class="text-secondary group-hover:text-secondary-dark font-medium inline-flex items-center">
        Ver m√°s
