---
const navigation = [
  { name: 'Inicio', href: '/' },
  { name: 'Acerca de', href: '/acerca' },
  { name: 'Productos', href: '/productos' },
  { name: 'Divisiones MÃ©dicas', href: '/divisiones' },
  { name: 'Contacto', href: '/contacto' },
];
---

<header class="bg-white shadow-sm fixed w-full top-0 z-50">
  <nav class="container mx-auto px-4 py-3">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center space-x-3">
        <img src="/logo.svg" alt="LatinMed Logo" class="h-10" />
        <span class="text-2xl font-bold text-primary">LatinMed</span>
      </a>
      
      <div class="hidden md:flex space-x-8">
        {navigation.map(item => (
          <a
            href={item.href}
            class="text-gray-700 hover:text-primary transition-colors duration-200"
          >
            {item.name}
          </a>
        ))}
      </div>

      <button
        id="mobile-menu-button"
        class="md:hidden p-2"
        aria-label="Menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden mt-4 pb-4"
    >
      {navigation.map(item => (
        <a
          href={item.href}
          class="block py-2 text-gray-700 hover:text-primary transition-colors duration-200"
        >
          {item.name}
        </a>
      ))}
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>