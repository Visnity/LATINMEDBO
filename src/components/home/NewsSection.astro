---
const latestNews = [
  {
    title: 'Nueva línea de productos dermatológicos',
    date: '2024-03-15',
    excerpt: 'Ampliamos nuestra gama de productos con tratamientos dermatológicos innovadores.',
    href: '/noticias/nueva-linea-dermatologica'
  },
  {
    title: 'Expansión de servicios en Santa Cruz',
    date: '2024-03-10',
    excerpt: 'Inauguramos nueva sucursal para mejor atención en la región oriental.',
    href: '/noticias/expansion-santa-cruz'
  },
  {
    title: 'Certificación ISO 9001:2015',
    date: '2024-03-05',
    excerpt: 'LatinMed obtiene certificación internacional de calidad.',
    href: '/noticias/certificacion-iso'
  }
];
---

<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-gray-900">
      Últimas Noticias
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {latestNews.map(news => (
        <article class="bg-gray-50 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300">
          <div class="p-6">
            <time datetime={news.date} class="text-sm text-secondary">
              {new Date(news.date).toLocaleDateString('es-BO', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
            <h3 class="text-xl font-semibold mt-2 mb-3 text-gray-900">
              {news.title}
            </h3>
            <p class="text-gray-600 mb-4">
              {news.excerpt}
            </p>
            <a
              href={news.href}
              class="text-primary hover:text-primary-dark font-medium inline-flex items-center"
            >
              Leer más
              <svg class="w-4 h-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>